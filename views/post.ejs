<% extend('./layouts/layout') %>

<div class="container my-4">
  <div class="hex-blog">
    <nav class="breadcrumb pl-0">
      <a class="breadcrumb-item text-primary" href="/">Home</a>
      <a class="breadcrumb-item text-primary" href="#"><%- categories[article.category].name %></a>
      <span class="breadcrumb-item active"><%- article.title %></span>
    </nav>

    <div class="row justify-content-center">
      <div class="col-md-9">
        <!-- article header -->
        <h1 class="text-primary"><%- article.title %></h1>
        <div class="d-flex flex-row text-secondary small">
          <!-- prettier-ignore -->
          <ul class="d-flex align-items-center list-unstyled mb-2">
            <li class="mr-3 my-0">
              <span class="fa fa-clock-o"></span>
              建立時間：<%- moment(article.createTime).format('YYYY/MM/DD HH:mm:ss') %>
            </li>

            <% if(article.updateTime) { %>
              <li class="mr-3 my-0">
                <span class="mr-3">|</span>
                <span class="fa fa-clock-o"></span>
                更新時間：<%- moment(article.updateTime).format('YYYY/MM/DD HH:mm:ss') %>
              </li>
            <% } %>

            <li class="mr-3 my-0">
              <span class="mr-3">|</span>
              <i class="fa fa-tag" aria-hidden="true"></i>
              <a href="#" class="text-info">
                <%- categories[article.category].name %>
              </a>
            </li>
          </ul>
        </div>

        <article class="text-dark post mb-4"><%- article.content %></article>

        <!-- 留言 -->
        <div class="card mb-3">
          <div class="card-body">
            <div id="disqus_thread"></div>
            <script>
              (function () {
                // DON'T EDIT BELOW THIS LINE
                var d = document,
                  s = d.createElement('script');
                s.src = 'https://express-blog-1.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
              })();
            </script>
            <noscript>
              Please enable JavaScript to view the
              <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
            </noscript>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
